{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/docs/**",
        "destination": "/docs/index.html"
      },
      {
        "source": "/atdd/**",
        "destination": "/atdd/cucumber-reports.html"
      },
      {
        "source": "/openapi/**",
        "destination": "/openapi/index.html"
      },
      {
        "source": "/asyncapi/**",
        "destination": "/asyncapi/index.html"
      },
      {
        "source": "/reports/**",
        "destination": "/reports/index.html"
      },
      {
        "source": "/",
        "destination": "/docs/index.html"
      }
    ]
  }
}
